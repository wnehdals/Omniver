<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myinfo_service.SecondRankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/my_second_picture"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow_radius_24"
                android:paddingHorizontal="15dp"
                android:text="" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/second_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow_radius_24"
                android:paddingHorizontal="15dp"
                android:text="" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/second_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yellow_radius_24"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/initial_display_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/initial_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:onClick="goToCategoryActivity"
                android:text="사진을 찍어주세요"
                android:textSize="25sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>